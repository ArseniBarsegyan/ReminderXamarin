<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModels1="clr-namespace:ReminderXamarin.ViewModels"
             x:Class="ReminderXamarin.Pages.CreateToDoItemPage"
             Title="Create to-do">
    <ContentPage.ToolbarItems>
        <ToolbarItem Icon="confirm.png" Clicked="Save_OnClicked" />
    </ContentPage.ToolbarItems>

    <ContentPage.BindingContext>
        <viewModels1:CreateToDoItemViewModel x:Name="ViewModel" />
    </ContentPage.BindingContext>

    <ContentPage.Content>
        <ScrollView VerticalOptions="FillAndExpand">
            <StackLayout>
                <Picker x:Name="PriorityPicker"
                        ItemsSource="{Binding AvailablePriorities}"
                        SelectedIndexChanged="PriorityPicker_OnSelectedIndexChanged"/>
                
                <Editor x:Name="DescriptionEditor"
                        HorizontalOptions="FillAndExpand"
                        VerticalOptions="FillAndExpand" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>