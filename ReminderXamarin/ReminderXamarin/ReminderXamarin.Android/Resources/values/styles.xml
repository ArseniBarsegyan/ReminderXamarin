<?xml version="1.0" encoding="utf-8" ?>
<resources>

  <style name="MainTheme" parent="MainTheme.Base">    
  </style>

  <style name="MainTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <!-- Action bar and tabbed page color -->
    <item name="colorPrimary">#0277bd</item>
    <!-- Status bar -->
    <item name="colorPrimaryDark">#004c8c</item>
    <!-- Tint widget -->
    <item name="colorAccent">#0277bd</item>
    <item name="windowActionModeOverlay">true</item>
    <item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>
    <item name="android:timePickerDialogTheme">@style/AppCompatDialogStyle</item>
    <item name="android:colorLongPressedHighlight">@color/colorAccent</item>
  </style>

  <style name="AppCompatDialogStyle" parent="Theme.AppCompat.Light.Dialog">
    <item name="colorAccent">#075289</item>
  </style>

  <!--Theme for toolbar popup menu-->
  <style name="ToolbarPopupTheme" parent="Theme.AppCompat.Light">
    <item name="android:colorBackground">#fafafa</item>
    <item name="android:textColor">#000000</item>
  </style>

  <!-- Splash activity style -->
  <style name="Reminder.Base" parent="Theme.AppCompat.Light">
  </style>

  <style name="Reminder" parent="Reminder.Base">
  </style>

  <style name="Reminder.Splash" parent ="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@drawable/splash_screen</item>
    <item name="android:windowNoTitle">true</item>
  </style>
</resources>
